<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.ld.gg.dao.mentoringdao.EstimateDAO">


<select id="select_by_id_estimate" resultType="estimate">
  SELECT * FROM estimate WHERE estimate_id = #{estimate_id};
</select>

<select id="select_by_mentor_email_estimate" resultType="estimate">
  SELECT * FROM estimate WHERE mentor_email = #{mentor_email};
</select>

<select id="select_by_menti_email_estimate" resultType="estimate">
  SELECT * FROM estimate WHERE menti_email = #{menti_email};
</select>

<insert id="insert_mentor_class" parameterType="estimate">
  INSERT INTO estimate (estimate_info, mentor_email, menti_email) 
  VALUES (#{estimate_info}, #{mentor_email}, #{menti_email});
</insert>

<delete id="delete_mentor_class" parameterType="int">
  DELETE FROM estimate WHERE class_id = #{class_id};
</delete>



</mapper>